{
  "name": "node",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "yarn eslint ./src/",
    "lint:fix": "yarn eslint --fix ./src/"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "^#/(.+)": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "dependencies": {
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.7",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^2.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2"
  }
}
